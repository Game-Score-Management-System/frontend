{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@icons/*": ["./src/app/ui/icons/*"],
      "@components/*": ["./src/app/ui/components/*"],
      "@hooks/*": ["./src/app/ui/hooks/*"],
      "@models/*": ["./src/app/ui/models/*"],
      "@store/*": ["./src/store/*"],
      "@lib/*": ["./src/app/lib/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
